package arraymaxeleusingmethod;

/**
 *
 * @author KIIT
 */
public class Arraymaxeleusingmethod {

    static int max(int A[]){
        int m=A[0];
        for(int i=0;i<A.length;i++){
            if(A[i]>m)
            { m = A[i];}
        }

                return m;
    }
    public static void main(String[] args) {
        int A[]={2,9,72,56,7};
        System.out.println(max(A));
    }
    
}
